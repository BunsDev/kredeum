{
  "compilerOptions": {
    "rootDir": "..",
    "baseUrl": "./",
    "allowJs": true,
    "target": "es2021",
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "strict": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true
  },
  "files": ["../hardhat.config.ts"],
  "include": [
    "../lib/*.ts",
    "./scripts/*.ts",
    "./tests/*.ts",
    "./deploy/*.ts",
  ],
  "exclude": ["artifacts"]
}
