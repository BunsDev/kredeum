{
  "name": "KredeumNFTs",
  "scripts": {
    "node-re-install": "rm -rf node_modules && pnpm install",
    "format-lint-php": "npm run php-fix && npm run php-check",
    "format-lint-js": "npx prettier-eslint **/*.sol **/*.svelte **/*.mjs **/*.js **/*.ts **/*.json **/*.html **/*.css **/*.yaml **/*.graphql **/*.md **/*.sh  --write",
    "format-lint": "npm run format-lint-js && npm run format-lint-php",
    "php-fix": "wordpress/vendor/bin/phpcbf wordpress/kredeum-nfts --extensions=php --standard=WordPress",
    "php-check": "wordpress/vendor/bin/phpcs wordpress/kredeum-nfts -n --ignore=vendor --extensions=php --standard=WordPress",
    "dapp-build": "PROD=true rollup -c",
    "dapp-build-dev": "rollup -c",
    "dapp-dev": "rollup -c -w",
    "dapp-start": "sirv app",
    "smart-flatten": "npx hardhat flatten solidity/contracts/nft.sol > solidity/flatten/nft.sol",
    "smart-deploy": "npx hardhat run scripts/deploy.mjs",
    "smart-deploy-mumbai": "npx hardhat run scripts/deploy.mjs --network mumbai",
    "smart-deploy-matic": "npx hardhat run scripts/deploy.mjs --netwok matic",
    "smart-list": "npx hardhat run scripts/list.mjs",
    "smart-compile": "npx hardhat compile",
    "sub-codegen": "cd thegraph && graph codegen",
    "sub-build": "cd thegraph && graph build",
    "sub-deploy": "cd thegraph && graph deploy zapaz/matic-open-nft --ipfs https://api.subgraph.com/ipfs/ --node https://api.subgraph.com/deploy/",
    "sub-deploy-mumbai": "cd thegraph && graph deploy zapaz/mumbai-open-nft --ipfs https://api.thegraph.com/ipfs/ --node https://api.thegraph.com/deploy/"
  },
  "devDependencies": {
    "@metamask/detect-provider": "^1.2.0",
    "@nomiclabs/hardhat-ethers": "^2.0.2",
    "@nomiclabs/hardhat-etherscan": "^2.1.2",
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "@openzeppelin/contracts": "^4.1.0",
    "@rollup/plugin-commonjs": "^17.1.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^11.2.1",
    "axios": "^0.21.1",
    "chai": "^4.3.4",
    "cids": "^1.1.6",
    "eslint": "^7.26.0",
    "ethereum-waffle": "^3.3.0",
    "ethers": "^5.1.4",
    "hardhat": "^2.2.1",
    "hardhat-abi-exporter": "^2.2.1",
    "multihashing-async": "^2.1.2",
    "prettier": "^2.3.0",
    "prettier-eslint": "^12.0.0",
    "prettier-eslint-cli": "^5.0.1",
    "prettier-plugin-sh": "^0.6.1",
    "prettier-plugin-solidity": "^1.0.0-beta.10",
    "prettier-plugin-svelte": "^2.3.0",
    "rollup": "^2.47.0",
    "rollup-plugin-css-only": "^3.1.0",
    "rollup-plugin-livereload": "^2.0.0",
    "rollup-plugin-node-builtins": "^2.1.2",
    "rollup-plugin-node-polyfills": "^0.2.1",
    "rollup-plugin-svelte": "^7.1.0",
    "rollup-plugin-terser": "^7.0.2",
    "sirv-cli": "^1.0.11",
    "solhint": "^3.3.4",
    "solhint-plugin-prettier": "^0.0.5",
    "svelte": "^3.38.2",
    "web-encoding": "^1.1.5",
    "@graphprotocol/graph-cli": "^0.20.0",
    "@graphprotocol/graph-ts": "^0.20.0",
    "solc": "^0.8.4"
  }
}
