{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./",
    "rootDir": "..",
    "resolveJsonModule": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "importsNotUsedAsValues": "remove",
    "paths": {
      "lib/*": ["../common/lib/*"],
      "abis/*": ["../common/abis/*"],
      "types/*": ["../common/types/*"]
    }
    // "strict": true
  },
  "include": ["svelte/*.svelte", "svelte/*.ts", "../common/lib/*.ts"],
  "files": [".eslintrc.ts", "rollup.config.ts"],
  "exclude": ["node_modules"]
}
